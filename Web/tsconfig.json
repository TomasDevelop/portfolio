/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      // -- LAYOUT ROUTES --
      "@Layout/modules": ["app/modules/layout/index.ts"],
      "@Layout/components": ["app/modules/layout/components/index.ts"],
      "@Layout/models": ["app/modules/layout/models/index.ts"],
      // -- SHARED ROUTES --
      "@Shared/components": ["app/shared/components/index.ts"],
      "@Shared/models": ["app/shared/models/index.ts"],
      "@Shared/services": ["app/shared/services/index.ts"],
      "@Shared/utils": ["app/shared/utils/index.ts"],
      "@State/store": ["app/state/index.ts"],
      // -- STORE ROUTES --
      // LAYOUT
      "@Store/layout/actions": ["app/state/layout/actions/index.ts"],
      "@Store/layout/reducers": ["app/state/layout/reducers/index.ts"],
      "@Store/layout/selectors": ["app/state/layout/selectors/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
